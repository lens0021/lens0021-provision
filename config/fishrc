# .fishrc

# User specific environment
if ! string match -q -- "$PATH" "$HOME/.local/bin:"
	set PATH "$HOME/.local/bin:$PATH"
end
if ! string match -q -- "$PATH" "$HOME/bin:"
	set PATH "$HOME/bin:$PATH"
end
if ! string match -q -- "$PATH" =~ "$HOME/.krew/bin:"
  set PATH "$HOME/.krew/bin:$PATH"
end
export PATH

set PAGER 'less -r'
export PAGER

set GPG_TTY $(tty)
export GPG_TTY

set KUBE_EDITOR hx
export KUBE_EDITOR

[ -f ~/.fzf.fish ] && . ~/.fzf.fish
[ -f /usr/local/git/port/user-leslie-snippets/rc/rc.fish ] && source /usr/local/git/port/user-leslie-snippets/rc/rc.fish
